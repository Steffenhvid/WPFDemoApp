<UserControl x:Class="WPFTestApplication.Views.ListViewHolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTestApplication.Views" 
             xmlns:viewmodels="clr-namespace:WPFTestApplication.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ListViewHolderViewModel}"
             xmlns:binding="clr-namespace:WPFTestApplication.Binding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:CustomListView Content="{Binding Persons}"/>
</UserControl>
